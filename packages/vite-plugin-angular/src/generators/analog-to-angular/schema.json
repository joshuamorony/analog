{
  "$schema": "http://json-schema.org/schema",
  "$id": "AnalogToAngular",
  "title": "",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "aliases": ["name", "projectName"],
      "description": "Project to revert to standard Angular components"
